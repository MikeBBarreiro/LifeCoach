extends ../shared/template
block content
  h2 LifeCoach
  .row
    .col-xs-9
      .row
        .col-xs-12
          h3= goal.name
      .row
        .col-xs-12
          h3 Task List
          table.table.table-striped.table-bordered
            thead
              th Name
              th Discription
              th Difficulty
              th Rank
              th Complete?
            tbody
              each task in goal.tasks
                tr
                  td= task.name
                  td= task.description
                  td= task.difficulty
                  td= task.rank
                  td= task.IscComplete
    .col-xs-6
      h2= goal.name
    .col-xs-6
      h2 Add Task
      form(role='form', method='post', action='/goals/#{goal._id}/tasks')
        .form-group
          label(for='name') Name
          input.form-control#name(type='text', name='name', autofocus=true)
        .form-group
          label(for='description') Description
          textarea.form-control#description(name='description')
        .form-group
          label(for='difficulty') Difficulty
          select.form-control#difficulty(name='difficulty')
            option Easy
            option Medium
            option Hard
        .form-group
          label(for='rank') Rank
          input.form-control#rank(type='number', name='rank')
        button.btn.btn-primary(type='submit') Submit





block scripts
